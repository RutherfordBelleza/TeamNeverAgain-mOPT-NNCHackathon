<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MOPT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7BCA3D</item>
        <item name="colorPrimaryVariant">#426E1E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9F56D6</item>
        <item name="colorSecondaryVariant">#793EA8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:spinnerStyle">@style/RobotoSpinnerStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoSpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="CustomEditText.DateTimeDialog">
        <item name="android:longClickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomEditText.Number">
        <item name="android:inputType">number</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">7</item>
    </style>

    <style name="CustomTextView">
        <item name="android:layout_marginBottom">4dp</item>
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <item name="android:textSize">14dp</item>
    </style>

</resources>