<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.add.NewChildFragment"
    tools:ignore="SpUsage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/childNameField"
                android:text="Child's Name"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/childNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:theme="@style/CustomEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/caregiverNameField"
                android:text="Mother/Caregiver's Name"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/caregiverNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:theme="@style/CustomEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/caregiverContactField"
                android:text="Mother/Caregiver's Contact Number (N/A if none)"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/caregiverContactField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:theme="@style/CustomEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/addressField"
                android:text="Location/Address of Residence"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/addressField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:theme="@style/CustomEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/isIndigenousPreschoolChildField"
                android:text="Is Indigenous Preschool Child?"
                android:theme="@style/CustomTextView" />

            <Spinner
                android:id="@+id/isIndigenousPreschoolChildField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/sexField"
                android:text="Sex" />

            <Spinner
                android:id="@+id/sexField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="48dp"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/birthDateField"
                android:text="Birth Date"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/birthDateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/weighingDateField"
                android:text="Weighing Date"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/weighingDateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/weightField"
                android:text="Weight"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/weightField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/heightField"
                android:text="Height"
                android:theme="@style/CustomTextView" />

            <EditText
                android:id="@+id/heightField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>